<% @post = Post.find(like.post_id) %>
<% user = @post.user %>
<li id="like-<%= like.id %>">
  <div class="row like-post">
    <div class="col-md-2">
      <%= link_to((image_tag @post.picture.thumb400.url), post_path(@post), class: 'post-picture') if @post.picture.url.present? %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @post.title, post_path(@post) %></p>
      <p><%= @post.description %></p>
      <p class="likes-user">posted by <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>