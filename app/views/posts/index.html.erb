<% provide(:title, '投稿検索一覧') %>
<div id="searchs">
  <div class="container">
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <%= render 'posts/search' if logged_in? %>
    <% if @search_word.present? %>
      <h3>”<%= @search_word %>”の検索結果：<%= @posts.count %>件</h3>
    <% else %>
      <h3>投稿一覧</h3>
    <% end %>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <%= paginate @posts %>
  </div>
</div>