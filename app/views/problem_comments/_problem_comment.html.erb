<% problem_comment_user = User.find(problem_comment.user_id) %>
<li id="comment-<%= problem_comment.id %>">
  <div class="row">
    <div class="col-md-12">
      <span class="user"><%= link_to problem_comment_user.name, problem_comment_user %></span>
    </div>
    <div class="col-md-12">
      <span class="comment"><%= problem_comment.content %></span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2, col-md-offset-3">
      <span class="comment-create-at"><%= time_ago_in_words(problem_comment.created_at) %>前</span>
    </div>
  </div>
</li>