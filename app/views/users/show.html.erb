<% provide(:title, "プロフィール") %>
<div class="container">
  <div class="profile-title">
    <div class="row">
        <div class="col-md-4">
        <div class="user-picture-box">
            <%= gravatar_for @user, size: 120, cl: "gravatar user-picture" %>
        </div>
        </div>
        <div class="col-md-8">
        <h4 class="show-user-name"><%= @user.name %></h4>
        <div>
            <%= @user.introduction %>
        </div>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <% if current_user == @user %>
            <div id="user-edit"><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
        <% end %>
        <%= render 'follow_form' if logged_in? %>
        </div>
    </div>
    <% if @user.id == current_user.id %>
    <% else %>
      <% if (current_user.followed_by? @user) && (@user.followed_by? current_user)  %>
      <% if @isTalk == true %>
        <p><a href="/talks/<%= @talkId %>" class="btn btn-primary btn-lg">チャットへ</a>
        <% else %>
        <%= form_for @talk do |f| %>
            <%= fields_for @membership do |e| %>
            <%= e.hidden_field :user_id, :value=> @user.id %>
            <% end %>
            <%= f.submit "チャットを始める" %>
        <% end %>
      <% end %>
      <% end %>
    <% end %>
    <div class="row">
      <div class="col-md-9">
          <% if @user.posts.any? %>
            <h3>投稿 (<%= @user.posts.count %>)</h3>
            <ol class="posts">
              <%= render @posts %>
            </ol>
              <%= paginate @posts %>
            <% end %>
      </div>
    </div>
  </div>
</div>